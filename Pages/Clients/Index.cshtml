@page
@model cpsbank.Pages.Clients.IndexModel

<br />
<h2>List Of Clients</h2>

<!-- Button to create a new client -->
<a class="btn btn-primary btn-sm" href="/Clients/new">Create New Client</a>
<br/>
<br/>

<!-- Search Form -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search clients..." value="@Model.SearchTerm" />
        <button class="btn btn-primary btn-sm" type="submit">Search</button>
    </div>
</form>

<!-- Table to display the list of clients -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Client ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Account Balance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.ListClients)
        {
            <tr>
                <td>@client.ClientID</td>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Email</td>
                <td>@client.PhoneNumber</td>
                <td>@client.AccountBalance.ToString("C")</td>
                <td>
                    <!-- Links to edit or delete the client -->
                    <a class="btn btn-success btn-sm" href="/Clients/Edit?id=@client.ClientID">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@client.ClientID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= (Model.TotalClients + IndexModel.PageSize - 1) / IndexModel.PageSize; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="?currentPage=@i&searchTerm=@Model.SearchTerm">@i</a>
            </li>
        }
    </ul>
</nav>
